.layout
    display: flex
    height: 100%

    .wrap
        flex: 1
        display: flex
        flex-direction: column

        .header
            .bar
                border-bottom: 1px solid #ddd
                height: 50px
                line-height: @height
                justifyContentSpaceBetween()
                padding: 0 20px

        .content
            margin: 20px 20px 0
            box-shadow: 0 2px 12px 0 rgba(#000, .1)
            flex: 1

            .title
                padding: 0 0 10px
                margin: 0 0 20px
                font-size: 16px
                font-weight: bold

            .main
                padding: 20px
        
        .footer
            height: 50px
            line-height: @height
            justifyContentSpaceBetween()
            padding: 0 20px