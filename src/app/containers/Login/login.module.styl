.login
    padding: 100px 0
    z-index: 2
    width: 1200px
    margin: 0 auto
    height: 100%
    background: url('./img/bg.png') no-repeat
    background-size: 887px 763px
    justifyContentSpaceBetween()

    &:after
        position: absolute
        left: 0
        top: 0
        right: 0
        bottom: 0
        background: rgba(0, 0, 0, 0.75)
        content: ' '
        z-index: 2

    .text
        flex: 1
        position: relative
        z-index: 3
        margin-bottom: 10px
        font-family: PingFangSC-Semibold, PingFangSC-Regular, Microsoft Yahei, Arial, sans-serif
        color: #fff
        padding-left: 230px
        margin-top: 150px
        color: #fff

        .title
            font-size: 40px

        .subTitle
            font-size: 30px

    .main
        width: 420px
        height: 430px
        background: #fff
        box-shadow: 0 10px 30px 0 rgba(#000, 0.1)
        border-radius: 20px
        padding: 25px 30px
        box-sizing: border-box
        position: relative
        z-index: 3

        .tab
            display: flex
            padding-bottom: 15px
            margin: 0 0 20px

            .tabItem
                text-align: center
                position: relative
                margin-right: 25px
                font-size: 20px
                font-family: PingFangSC-Semibold, PingFangSC-Regular, Microsoft Yahei, Arial, sans-serif
                color: #606266
                cursor: pointer

                &.cur:after
                    position: absolute
                    left: 50%
                    bottom: -15px
                    width: 35px
                    height: 7px
                    margin-left: -18px
                    background: #1890ff
                    border-radius: 4px
                    content: ' '
                    display: block

        .formItem
            display: flex

            :global
                .ant-row
                    flex: 1

                    .ant-input
                        height: 40px

            img
                cursor: pointer
                size: 100px 40px
                margin: 0 0 0 10px

            .btn
                text-align: center
                background-color: #1890ff
                color: #fff
                cursor: pointer
                flex: 1
                height: 44px
                line-height: @height
                border-radius: 4px
                padding: 0
                font-family: SF Pro SC, SF Pro Text, SF Pro Icons, PingFang SC, Helvetica Neue, Helvetica, Arial, sans-serif
                font-size: 16px

            .link
                color: #1890ff
